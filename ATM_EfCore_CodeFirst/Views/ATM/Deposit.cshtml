@model ATM_EfCore_CodeFirst.Models.Bank_CustomersModel
<h1>Deposit</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit" ,asp-controller="ATM">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Balance">Welcome @ViewBag.CustomerName</label>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MainPage">Back</a>
</div>